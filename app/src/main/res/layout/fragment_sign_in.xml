<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/my_love"
    tools:context="com.geektech.kitsu.ui.fragments.sign.in.SignInFragment">

    <EditText
        android:id="@+id/inputLayout_nick_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginHorizontal="15dp"
        android:hint="@string/enter_nick_name"/>

    <EditText
        android:id="@+id/inputLayout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_margin="15dp"
        android:hint="@string/enter_password"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_in_btn"
        android:background="@drawable/round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#828856"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="SIGN_IN"
        android:textSize="16dp"
        android:layout_margin="15dp"/>

</LinearLayout>